<script>
    function Berechnen() {
        var conval = document.getElementById("ContentValID").value;
        var conwt = document.getElementById("ContentWtID").value;
        var layoutval = document.getElementById("LayoutValID").value;
        var layoutwt = document.getElementById("LayoutWtID").value;
        var structval = document.getElementById("StructureValID").value;
        var structwt = document.getElementById("StructureWtID").value;
        var styleval = document.getElementById("StyleValID").value;
        var stylewt = document.getElementById("StyleWtID").value;
        var litval = document.getElementById("LiteratureValID").value;
        var litwt = document.getElementById("LiteratureWtID").value;
        var difval = document.getElementById("DifficultyValID").value;
        var difwt = document.getElementById("DifficultyWtID").value;
        var novval = document.getElementById("NoveltyValID").value;
        var novwt = document.getElementById("NoveltyWtID").value;
        var richval = document.getElementById("RichnessValID").value;
        var richwt = document.getElementById("RichnessWtID").value;
        document.getElementById("notenvorschlag").value = (conval * conwt + layoutval * layoutwt + structval * structwt + styleval * stylewt + litval * litwt + difval * difwt + novval * novwt + richval * richwt) / 100;
    }
</script>


