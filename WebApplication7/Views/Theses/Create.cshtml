@model WebApplication7.Models.Thesis

@{
    ViewData["Title"] = "Create";
}


<h2>Erstellen</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupervisorId" class="control-label"></label>
                <select asp-for="SupervisorId" class="form-control" asp-items="ViewBag.SupervisorId" ></select>
            </div>
            <div class="form-group options">
                <div class="checkbox">
                    <b>Möglich für:</b></br>
                    <label>
                        <input asp-for="Bachelor" /> @Html.DisplayNameFor(model => model.Bachelor)
                    </label>
                    <label>
                        <input asp-for="Master" /> @Html.DisplayNameFor(model => model.Master)
                    </label>
                </div>
                <span id="Title-error">Es muss mindestens eine Box ausgewählt sein.</span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" asp-items="@Html.GetEnumSelectList(typeof(Status))" class="form-control"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProgrammeId" class="control-label"></label>
                <select asp-for="ProgrammeId" class="form-control" asp-items="ViewBag.ProgrammeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Registration" class="control-label"></label>
                <input asp-for="Registration" class="form-control" id="date" style="float:right" />
                <span asp-validation-for="Registration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Filing" class="control-label"></label>
                <input asp-for="Filing" class="form-control" id="date2" style="float:right" />
                <span asp-validation-for="Filing" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Summary" class="control-label"></label>
                <textarea asp-for="Summary" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Strenghts" class="control-label"></label>
                <textarea asp-for="Strenghts" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Strenghts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weaknesses" class="control-label"></label>
                <textarea asp-for="Weaknesses" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Weaknesses" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Evaluation" class="control-label"></label>
                <textarea asp-for="Evaluation" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Evaluation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContentVal" class="control-label"></label>
                <input asp-for="ContentVal" class="form-control" id="ContentValID" />
                <span asp-validation-for="ContentVal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LayoutVal" class="control-label"></label>
                <input asp-for="LayoutVal" class="form-control" id="LayoutValID" />
                <span asp-validation-for="LayoutVal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StructureVal" class="control-label"></label>
                <input asp-for="StructureVal" class="form-control" id="StructureValID" />
                <span asp-validation-for="StructureVal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StyleVal" class="control-label"></label>
                <input asp-for="StyleVal" class="form-control" id="StyleValID" />
                <span asp-validation-for="StyleVal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LiteratureVal" class="control-label"></label>
                <input asp-for="LiteratureVal" class="form-control" id="LiteratureValID" />
                <span asp-validation-for="LiteratureVal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DifficultyVal" class="control-label"></label>
                <input asp-for="DifficultyVal" class="form-control" id="DifficultyValID" />
                <span asp-validation-for="DifficultyVal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoveltyVal" class="control-label"></label>
                <input asp-for="NoveltyVal" class="form-control" id="NoveltyValID" />
                <span asp-validation-for="NoveltyVal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RichnessVal" class="control-label"></label>
                <input asp-for="RichnessVal" class="form-control" id="RichnessValID" />
                <span asp-validation-for="RichnessVal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContentWt" class="control-label"></label>
                <input asp-for="ContentWt" class="form-control" id="ContentWtID" value="30" />
                <span asp-validation-for="ContentWt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LayoutWt" class="control-label"></label>
                <input asp-for="LayoutWt" class="form-control" id="LayoutWtID" value="15" />
                <span asp-validation-for="LayoutWt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StrucutreWt" class="control-label"></label>
                <input asp-for="StrucutreWt" class="form-control" id="StructureWtID" value="10" />
                <span asp-validation-for="StrucutreWt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StyleWt" class="control-label"></label>
                <input asp-for="StyleWt" class="form-control" id="StyleWtID" value="10" />
                <span asp-validation-for="StyleWt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LiteratureWt" class="control-label"></label>
                <input asp-for="LiteratureWt" class="form-control" id="LiteratureWtID" value="10" />
                <span asp-validation-for="LiteratureWt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DifficultyWt" class="control-label"></label>
                <input asp-for="DifficultyWt" class="form-control" id="DifficultyWtID" value="5" />
                <span asp-validation-for="DifficultyWt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoveltyWt" class="control-label"></label>
                <input asp-for="NoveltyWt" class="form-control" id="NoveltyWtID" value="10" />
                <span asp-validation-for="NoveltyWt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RichnessWt" class="control-label"></label>
                <input asp-for="RichnessWt" class="form-control" id="RichnessWtID" value="10" />
                <span asp-validation-for="RichnessWt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WeightSum" class="control-label"></label>
                <input asp-for="WeightSum" class="form-control" id="WtSum" readonly>
                <span asp-validation-for="WeightSum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <select asp-for="Grade" class="form-control">
                    <option value="" selected>Noch keine Note</option>
                    <option value="1.0">1.0</option>
                    <option value="1.3">1.3</option>
                    <option value="1.7">1.7</option>
                    <option value="2.0">2.0</option>
                    <option value="2.3">2.3</option>
                    <option value="2.7">2.7</option>
                    <option value="3.0">3.0</option>
                    <option value="3.3">3.3</option>
                    <option value="3.7">3.7</option>
                    <option value="4.0">4.0</option>
                    <option value="5.0">5.0</option>
                </select>
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Speichern" class="btn btn-default" id="checkBtn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Zurück zur Liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2018.3.1017/styles/kendo.common-bootstrap.core.min.css" />
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2018.3.1017/styles/kendo.bootstrap.min.css" />
    <link rel="stylesheet" href="styles/kendo.common.min.css" />
    <link rel="stylesheet" href="styles/kendo.default.min.css" />
    <link rel="stylesheet" href="styles/kendo.default.mobile.min.css" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
    <script src="js/jquery.min.js"></script>
