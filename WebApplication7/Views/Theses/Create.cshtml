                document.getElementById("WtSum").value = weight;
            });

            litwt.addEventListener("change", function () {
                weight = Number(conwt.value) + Number(layoutwt.value) + Number(structwt.value) + Number(stylewt.value) + Number(litwt.value) + Number(difwt.value) + Number(novwt.value) + Number(richwt.value);
                document.getElementById("WtSum").value = weight;
            });

            difwt.addEventListener("change", function () {
                weight = Number(conwt.value) + Number(layoutwt.value) + Number(structwt.value) + Number(stylewt.value) + Number(litwt.value) + Number(difwt.value) + Number(novwt.value) + Number(richwt.value);
                document.getElementById("WtSum").value = weight;
            });

            novwt.addEventListener("change", function () {
                weight = Number(conwt.value) + Number(layoutwt.value) + Number(structwt.value) + Number(stylewt.value) + Number(litwt.value) + Number(difwt.value) + Number(novwt.value) + Number(richwt.value);
                document.getElementById("WtSum").value = weight;
            });

            richwt.addEventListener("change", function () {
                weight = Number(conwt.value) + Number(layoutwt.value) + Number(structwt.value) + Number(stylewt.value) + Number(litwt.value) + Number(difwt.value) + Number(novwt.value) + Number(richwt.value);
                document.getElementById("WtSum").value = weight;
            });


        });

    </script>

}


